InfoStoreAdd terminal xterm
InfoStoreAdd font "xft:Hack-Regular:size=12:antialias=True"
InfoStoreAdd dir_screenshot "~/Pictures/screenshots"

#   __                  _   _                 
#  / _|_   _ _ __   ___| |_(_) ___  _ __  ___ 
